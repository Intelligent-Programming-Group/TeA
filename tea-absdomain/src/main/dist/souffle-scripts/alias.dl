.type M <: unsigned
.type V <: unsigned
.type H <: unsigned

.decl MV(m:M, v:V)
.input MV
.decl ci_pt(v:V, h:H)
.input ci_pt

.decl Alias(m:M, u:V, v:V)
.output Alias
// Only care about normal aliases
Alias(m, u, v) :- MV(m, v), MV(m, u), ci_pt(u, h), ci_pt(v, h), u != v.
Alias(m, u, v) :- MV(m, v), MV(m, u), ci_pt(u, h), ci_pt(v, h), u != v.